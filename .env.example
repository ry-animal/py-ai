# Provider API keys
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
TAVILY_API_KEY=

# App settings
ENVIRONMENT=development
LOG_LEVEL=INFO

# Redis / Celery
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1      # optional; defaults to REDIS_URL
CELERY_RESULT_BACKEND=redis://localhost:6379/2  # optional; defaults to REDIS_URL
CELERY_TASK_DEFAULT_QUEUE=default               # keep or rename per environment

# HTTP guardrails
MAX_REQUEST_BODY_BYTES=2000000
RATE_LIMIT_REQUESTS_PER_WINDOW=120
RATE_LIMIT_WINDOW_SECONDS=60

# Model defaults
MODEL_PROVIDER=openai
MODEL_NAME=gpt-4o-mini
CLAUDE_MODEL=claude-3-5-sonnet-latest
STREAMING_ENABLED=true

# Tavily
MAX_WEB_RESULTS=3
TAVILY_SEARCH_DEPTH=advanced

# Docker
API_BASE_URL=http://127.0.0.1:8010