# Enterprise Environment Configuration Example
# Copy to .env and fill in actual values

# ============================================================================
# BASIC CONFIGURATION
# ============================================================================
ENVIRONMENT=production
LOG_LEVEL=INFO
CORS_ALLOW_ORIGINS=["https://yourdomain.com", "https://app.yourdomain.com"]

# ============================================================================
# AI PROVIDER CONFIGURATION
# ============================================================================
# Required: At least one AI provider
ANTHROPIC_API_KEY=sk-ant-api03-your-anthropic-key-here
OPENAI_API_KEY=sk-proj-your-openai-key-here

# AI Model Configuration
MODEL_PROVIDER=openai
MODEL_NAME=gpt-4o-mini
CLAUDE_MODEL=claude-3-5-sonnet-latest
STREAMING_ENABLED=true

# Web Search (Optional)
TAVILY_API_KEY=tvly-your-tavily-key-here
MAX_WEB_RESULTS=5
TAVILY_SEARCH_DEPTH=advanced

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# MongoDB for Document Storage
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/py_ai_platform?retryWrites=true&w=majority
MONGODB_DATABASE=py_ai_platform

# PostgreSQL for Metadata & Sessions
POSTGRES_URL=postgresql://username:password@postgres-host:5432/py_ai_metadata
POSTGRES_DATABASE=py_ai_metadata

# Redis for Caching & Celery
REDIS_URL=redis://redis-host:6379/0
CELERY_BROKER_URL=redis://redis-host:6379/1
CELERY_RESULT_BACKEND=redis://redis-host:6379/2

# ============================================================================
# VECTOR DATABASE CONFIGURATION
# ============================================================================
# Choose one: vertex, snowflake, mongodb_vector, cockroach, chroma
VECTOR_DB_TYPE=vertex

# --- Vertex AI Configuration (if using vertex) ---
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-central1
VERTEX_INDEX_ENDPOINT_ID=projects/123456789/locations/us-central1/indexEndpoints/your-endpoint-id

# --- Snowflake Configuration (if using snowflake) ---
SNOWFLAKE_ACCOUNT=your-account.snowflakecomputing.com
SNOWFLAKE_USER=your-username
SNOWFLAKE_PASSWORD=your-password
SNOWFLAKE_DATABASE=VECTOR_DB
SNOWFLAKE_SCHEMA=PUBLIC

# --- CockroachDB Configuration (if using cockroach) - Bonus points! ðŸŽ¯ ---
COCKROACH_CONNECTION_STRING=postgresql://username:password@cockroach-host:26257/defaultdb?sslmode=require

# ============================================================================
# LIGHTLLM INTEGRATION
# ============================================================================
LIGHTLLM_ENDPOINT=http://lightllm-server:8080
LIGHTLLM_ENABLED=true

# ============================================================================
# MULTI-AGENT FEATURES
# ============================================================================
ENABLE_SMART_ORCHESTRATOR=true
ENABLE_HYBRID_AGENT=true
ENABLE_PYDANTIC_AGENT=true
ENABLE_LANGGRAPH_AGENT=true

# Agent Memory Configuration
AGENT_MEMORY_MAX_TURNS=5
AGENT_MEMORY_TTL_SECONDS=86400

# ============================================================================
# SECURITY & PERFORMANCE
# ============================================================================
MAX_REQUEST_BODY_BYTES=10485760  # 10MB
RATE_LIMIT_REQUESTS_PER_WINDOW=200
RATE_LIMIT_WINDOW_SECONDS=60

# ============================================================================
# MONITORING & OBSERVABILITY
# ============================================================================
OTEL_ENDPOINT=http://jaeger:14268/api/traces
ENABLE_METRICS=true
METRICS_PORT=9090

# ============================================================================
# ENTERPRISE FEATURES
# ============================================================================
ENABLE_PLUGINS=true
PLUGIN_DIRECTORY=plugins

# ============================================================================
# HARNESS CI/CD INTEGRATION
# ============================================================================
# These are typically set by the CI/CD pipeline
# HARNESS_PIPELINE_ID=py_ai_pipeline
# HARNESS_BUILD_NUMBER=${HARNESS_BUILD_NUMBER}
# CONTAINER_IMAGE_TAG=${HARNESS_BUILD_NUMBER}

# ============================================================================
# GOOGLE CLOUD SPECIFIC (if deploying to GCP)
# ============================================================================
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
# GOOGLE_CLOUD_PROJECT=your-gcp-project-id

# ============================================================================
# KUBERNETES SPECIFIC (if deploying to K8s)
# ============================================================================
# KUBERNETES_NAMESPACE=py-ai-platform
# KUBERNETES_SERVICE_ACCOUNT=py-ai-service-account

# ============================================================================
# DEVELOPMENT OVERRIDES
# ============================================================================
# Uncomment for local development
# VECTOR_DB_TYPE=chroma
# MONGODB_URL=mongodb://localhost:27017/py_ai_platform
# POSTGRES_URL=postgresql://postgres:password@localhost:5432/py_ai_metadata
# REDIS_URL=redis://localhost:6379/0
# LIGHTLLM_ENABLED=false