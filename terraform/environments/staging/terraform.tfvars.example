# Example terraform.tfvars for staging environment
# Copy this to terraform.tfvars and fill in actual values

# Google Cloud configuration
project_id = "your-gcp-project-id"
region     = "us-central1"

# Container images (these will be provided by CI/CD pipeline)
api_image    = "gcr.io/your-project/py-ai-api:latest"
worker_image = "gcr.io/your-project/py-ai-worker:latest"

# Vector database configuration
vector_db_type       = "vertex"  # or "snowflake", "mongodb", "cockroach"
documents_gcs_bucket = "gs://your-project-documents"

# Database connections
mongodb_connection_string = "mongodb+srv://user:pass@cluster.mongodb.net/py-ai-staging"

# API keys
anthropic_api_key = "sk-ant-api03-your-key-here"
openai_api_key    = "sk-proj-your-key-here"
tavily_api_key    = "tvly-your-key-here"

# Monitoring
alert_email = "alerts@yourcompany.com"

# GitHub (for Cloud Build triggers)
github_owner = "your-github-username"
github_repo  = "py-ai"